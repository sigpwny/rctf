{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "outDir": "dist/server",
    "baseUrl": ".",
  },
  "rules": {
    "no-unused-vars": "off"
  },
  "include": [
    "server/**/*"
  ]
}
